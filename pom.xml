			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>copy-package</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
							<mkdir dir="target/saiku-ui" />
								<copy todir="target/saiku-ui">
									<fileset dir="${basedir}/">
                                        <exclude name="target/" />
                                        <exclude name="pom.xml" />
                                        <exclude name=".git/" />
                                        <exclude name=".gitignore" />
                                    </fileset>
								</copy>
<!--                                <copy file="target/saiku.min.js" tofile="target/saiku-ui/saiku.min.js"/>
                                <copy file="target/saiku.min.js.gz" tofile="target/saiku-ui/saiku.min.js.gz"/>
-->
<!--
                                <copy todir="target/saiku-ui/doc/">
									<fileset dir="${basedir}/target/jsdoc"/>
								</copy>
-->
								<zip destfile="target/saiku-ui-${project.version}.zip">
									<zipfileset dir="target/saiku-ui/" />
								</zip>
								<zip destfile="target/saiku-ui-${project.version}.war">
									<zipfileset dir="target/saiku-ui/" />
								</zip>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
			    <groupId>org.codehaus.mojo</groupId>
			    <artifactId>build-helper-maven-plugin</artifactId>
			    <version>1.7</version>
			    <executions>
			        <execution>
			            <id>attach-artifacts</id>
			            <phase>package</phase>
			            <goals>
			                <goal>attach-artifact</goal>
			            </goals>
			            <configuration>
			                <artifacts>
			                    <artifact>
			                        <file>target/saiku-ui-${project.version}.war</file>
			                        <type>war</type>                           
			                    </artifact>
			                     <artifact>
			                        <file>target/saiku-ui-${project.version}.zip</file>
			                        <type>zip</type>                           
			                    </artifact>
			                </artifacts>
			            </configuration>
			        </execution>
			    </executions>
			</plugin>

